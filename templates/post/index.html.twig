{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            {% for post in posts %}
                <div class="col-sm-3">
                    <div class="card mt-4">
                        <div class="card-body">
                            <p class="card-text">{{ post.content }}</p>
                            {% if post.comment|length <= 1 %}
                                <small>{{ post.comment|length}} commentaire</small>
                            {% else %}
                                <small>{{ post.comment|length }} commentaires</small>
                            {% endif %}
                            <a href="/post/view/{{ post.id }}" class="btn btn-primary">Voir</a>
                        </div>
                    </div>
                </div>
                {#            {{ dump(post) }}#}
            {% endfor %}
        </div>
    </div>
{% endblock %}
