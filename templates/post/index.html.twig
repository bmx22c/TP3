{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
    <div class="container mt-4">
        {% for post in posts %}
            <div class="card">
                <div class="card-body">
                    <p class="card-text">{{ post.content }}</p>
                    <a href="/post/view/{{ post.id }}" class="btn btn-primary">Voir</a>
                </div>
            </div>
            {{ dump(post) }}
        {% endfor %}
    </div>
{% endblock %}
